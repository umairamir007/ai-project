{
  "compilerOptions": {
    "types": ["node", "vite/client"],
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/types/**/*.d.ts", "src/types/**/*.ts"]
}
